{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    // Path alias setup
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"]
    },
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "src/server.ts"],
  "exclude": ["node_modules","dist"]
}
