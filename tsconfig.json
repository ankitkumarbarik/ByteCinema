{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    // Path alias setup
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["src", "src/server.ts"],
  "exclude": ["node_modules","dist"]
}
